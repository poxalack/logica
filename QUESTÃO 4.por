programa
{
	
	funcao inicio()
	{
		inteiro a
		escreva ("Informe a temperatura em celsius: ")
		leia (a)
		real formula= a + 273.15
		escreva ("Essa é a sua temperatura em kelvin:" + formula)
	}
}
